@model IEnumerable<EmployeeLeaverManagement.Models.SubmitLeave>

@{
    ViewBag.Title = "LeaveRequest";
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LeaveTypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetFormDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetToDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetApplicationText)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Days)
        </th>*@
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType.LeaveTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetFormDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetToDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetApplicationText)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>*@
            <td>
                @Html.ActionLink("Approved", "ApprovedRequest", new { id = item.ID }) |

                @Html.ActionLink("Delete", "DeleteRequest", new { id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this Leave Request?');" })
            </td>
        </tr>
    }
</table>
