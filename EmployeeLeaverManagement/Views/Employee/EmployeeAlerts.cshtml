@model IEnumerable<EmployeeLeaverManagement.Models.UserAlert>

@{
    ViewBag.Title = "EmployeeAlerts";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUsers.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUsers.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.UserAlertID })
        </td>
    </tr>
}
</table>
